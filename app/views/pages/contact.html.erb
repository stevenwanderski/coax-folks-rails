<div class="container">
  <%= render 'shared/flash_messages' %>

  <h1>Contact</h1>

  <%= form_for @contact_form, url: contact_path do |f| %>
    <div class="field">
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>

    <div class="field">
      <%= f.label :email %>
      <%= f.text_field :email %>
    </div>

    <div class="field">
      <%= f.label :message %>
      <%= f.text_area :message %>
    </div>

    <div class="field">
      <%= f.submit 'Save', class: 'button' %>
    </div>
  <% end %>
</div>
