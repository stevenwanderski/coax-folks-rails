<div class="container">
  <h1 class="main--title"><em>Chicago</em> Event Musicians</h1>
</div>

<div class="container container__flex">

  <main>
    <% if @image.present? %>
      <div class="main-block">
        <img src="<%= @image %>">
      </div>
    <% end %>

    <% if @video.present? %>
      <div class="main-block">
        <div class="video-container">
          <%= raw @video %>
        </div>
      </div>
    <% end %>

    <%= simple_format(@copy, {}, sanitize: false) %>
  </main>

  <aside>
    <div class="aside-block">
      <%= render 'track_player', track: @track %>
    </div>

    <div class="aside-block">
      <%= render 'shows', shows: @shows %>
    </div>

    <div class="aside-block">
      <%= render 'social' %>
    </div>
  </aside>

</div>
