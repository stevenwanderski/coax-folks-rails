<div class="page-header">
  <h1>Shows</h1>
  <div class="controls">
    <%= link_to '+ Add Show', new_admin_show_path, class: 'button' %>
  </div>
</div>

<% if @shows.any? %>
  <table>
    <thead>
      <tr>
        <th>Date</th>
        <th>Band</th>
        <th>Venue</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @shows.each do |show| %>
        <tr>
          <td><%= l show.date, format: :month_day_year %></td>
          <td><%= show.band_name %></td>
          <td><%= show.venue_name %></td>
          <td>
            <%= link_to 'Edit', edit_admin_show_path(show) %>
            <%= link_to 'Delete', admin_show_path(show), method: :delete, data: { confirm: 'Are you sure?' } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= paginate @shows %>
<% else %>
  No shows yet.
<% end %>
