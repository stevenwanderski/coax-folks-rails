<div class="page-header">
  <h1>Account</h1>
</div>

<%= form_for @user, url: admin_account_path do |f| %>
  <div class="field">
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %>
  </div>

  <div class="field">
    <%= f.submit 'Save', class: 'button' %>
  </div>
<% end %>
